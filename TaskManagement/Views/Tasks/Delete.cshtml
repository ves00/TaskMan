@model TaskManagement.Models.Task
@{
    ViewData["Title"] = "Delete";
}
<a class="button-back" asp-controller="Projects" asp-action="Details" asp-route-id="@Model.TaskProjectId"><i class="fas fa-chevron-left"></i><span>Go back to Project</span></a>

<h2>Delete</h2>

<h3>Are you sure you want to delete <b>@Model.TaskName</b>?</h3>
<div>
    <div class="list-group">
        <div href="#" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@Model.TaskName</h5>
                <small class="text-muted">@Model.TaskCreatedDateTime</small>
            </div>
            <p class="mb-1">@Model.TaskDescription</p>
            <small class="text-muted">@Model.TaskTaskState.TaskStateName</small>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskId" />
        <input type="hidden" name="ProjectID" value="@Model.TaskProjectId" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
</div>
